    if (Q.player_choice_sa_ban == 'federal') {
        Q.dvp_burgerblock_dissent += 0.1;
        Q.dnvp_burgerblock_dissent += 0.15;
        Q.bruning_support += 3;
    } else if (Q.player_choice_sa_ban == 'consensus') {
        Q.dvp_burgerblock_dissent += 0.05;
