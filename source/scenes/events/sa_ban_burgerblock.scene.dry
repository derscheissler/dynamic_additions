        success_score += Q.prussian_police_loyalty * 10;
    }
    if (Q.hindenburg_angry_bruning) {
        success_score -= Math.floor(Q.hindenburg_angry_bruning / 3);
    } else {
        success_score += 10;
    }
    if (Q.dvp_burgerblock_dissent) {
        success_score -= Q.dvp_burgerblock_dissent * 40;
    }
    if (Q.dnvp_burgerblock_dissent) {
        success_score -= Q.dnvp_burgerblock_dissent * 50; // DNVP more problematic
    }
