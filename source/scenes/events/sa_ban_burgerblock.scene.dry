        success_score += 10;
    }
    
    // Determine outcome
    Q.sa_ban_burgerblock_succeeds = (success_score >= 60) ? 1 : 0;
    Q.sa_ban_burgerblock_fails = (success_score < 60) ? 1 : 0;
    Q.sa_ban_partial = (success_score >= 45 && success_score < 60) ? 1 : 0;
!}
